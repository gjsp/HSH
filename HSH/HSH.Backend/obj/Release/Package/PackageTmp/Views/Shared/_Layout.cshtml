<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gold Trade System Website</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>    
    @using Microsoft.AspNet.Identity
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Gold Trade System", "Index", "Home", null, new { @class = "navbar-brand" })

         
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                @if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo != null)
                {
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Operation.ToString() || HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType ==HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operation<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("รายชื่อสมาชิก", "Index", "Members")</li>
                                <li>@Html.ActionLink("สร้างสมาชิกบุคลธรรมดา", "CreateMemberIndi", "Members")</li>
                                <li>@Html.ActionLink("สร้างสมาชิกนิติบุคคล/ร้านทอง", "CreateMemberCorp", "Members")</li>
                            </ul>
                        </li>
                    }
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType ==HSH.Data.Helper.EnumHelper.UserType.Cashier.ToString() ||HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType ==HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cashier <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("รายการจ่ายเงิน", "IndexPay", "Tickets", new { pt = "ca" }, null)</li>
                                <li>@Html.ActionLink("รายการรับชำระเงิน", "IndexRec", "Tickets", new { pt = "ca" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติการจ่ายเงิน", "IndexApp", "TicketPay", new { pt = "ca" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติการรับชำระเงิน", "IndexApp", "TicketReceive", new { pt = "ca" }, null)</li>
                                <li>@Html.ActionLink("รายการฝากถอนหลักประกัน", "IndexColCash", "Members", new { pt = "ca" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติหลักประกัน", "IndexApproveCollateralCash", "Members", new { pt = "ca" }, null)</li>
                            </ul>
                        </li>
                    }
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Finance.ToString() || HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Finance <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("รายการจ่ายเงิน", "IndexPay", "Tickets", new { pt = "fi" }, null)</li>
                                <li>@Html.ActionLink("รายการรับชำระเงิน", "IndexRec", "Tickets", new { pt = "fi" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติการจ่ายเงิน", "IndexApp", "TicketPay", new { pt = "fi" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติการรับชำระเงิน", "IndexApp", "TicketReceive", new { pt = "fi" }, null)</li>
                                <li>@Html.ActionLink("รายการฝากถอนหลักประกัน", "IndexColCash", "Members", new { pt = "fi" }, null)</li>
                                <li>@Html.ActionLink("รายการอนุมัติหลักประกัน", "IndexApproveCollateralCash", "Members", new { pt = "fi" }, null)</li>
                            </ul>
                        </li>
                    }
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Stock.ToString() || HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Stock <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("รายการสถานะการจ่ายเงิน", "IndexCom", "TicketPay")</li>
                                <li>@Html.ActionLink("รายการสถานะการรับชำระเงิน", "IndexCom", "TicketReceive")</li>
                                <li>@Html.ActionLink("อิมพอร์ท/เอ็กพอร์ท ทองคำ", "IndexAsset", "Transfers")</li>
                                <li>@Html.ActionLink("รายการฝากถอนทองซื้อขาย", "Index", "Transfers")</li>
                                <li>@Html.ActionLink("รายการทองเข้าทองออก", "IndexInout", "Transfers")</li>
                                <li>@Html.ActionLink("รายการการจ่ายเงินที่เรียบร้อยแล้ว", "IndexSuc", "TicketPay")</li>
                                <li>@Html.ActionLink("รายการการรับชำระเงินที่เรียบร้อยแล้ว", "IndexSuc", "TicketReceive")</li>
                                <li>@Html.ActionLink("Stock Gold", "Index", "Company")</li>
                                <li>@Html.ActionLink("รายการฝากถอนหลักประกัน", "IndexColGold", "Members")</li>
                                <li>@Html.ActionLink("รายการอนุมัติทองหลักประกัน", "IndexApproveCollateralGold", "Members")</li>
                            </ul>
                        </li>
                    }
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType ==HSH.Data.Helper.EnumHelper.UserType.Trader.ToString() ||HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType ==HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Trader<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("รายการชื้อขายทองคำ", "Index", "Tickets")</li>
                                <li>@Html.ActionLink("สร้างออเดอร์", "Create", "Tickets")</li>
                            </ul>
                        </li>
                    }
                    if (HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Risk.ToString() || HSH.Backend.Helper.SessionHelper.CurrentUserInfo.UserType == HSH.Data.Helper.EnumHelper.UserType.Admin.ToString())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="Risk">Risk<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("กำหนดค่าหลักประกัน", "Edit", "Collaterals")</li>
                                <li>@Html.ActionLink("รายการอนุมัติการสมัคร", "IndexApproveRegister", "Members")</li>
                                <li>@Html.ActionLink("รายการอนุมัติหลักประกัน", "IndexApproveCollateral", "Members")</li>
                                <li>@Html.ActionLink("รายการคอลฟอร์ส", "Index", "MemberCallForce")</li>
                                <li>@Html.ActionLink("กำหนดค่าการเทรด", "Edit", "StockSetting")</li>
                            </ul>
                        </li>
                    }
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KIT IT CREATE ALL RIGHT RESERVE</p>
        </footer>
    </div>    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
